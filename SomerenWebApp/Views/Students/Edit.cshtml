@model SomerenWebApp.Models.Student

@{
	ViewData["Title"] = "Edit Student";
}

<h4>Edit Student</h4>

<form action="/Students/Edit" method="post">
	<input hidden type="number" name="StudentNum" value="@Model?.StudentNum" />

	<div class="form-group py-2">
		<label for="FirstName">First Name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control" required value="@Model?.FirstName" />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last Name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control" required value="@Model?.LastName" />
	</div>

	<div class="form-group py-2">
		<label for="PhoneNum">Telephone Number:</label>
		<input type="tel" id="PhoneNum" name="PhoneNum" class="form-control" required value="@Model?.PhoneNum" />
	</div>

	<div class="form-group py-2">
		<label for="Class">Class:</label>
		<input type="text" id="Class" name="Class" class="form-control" required value="@Model?.Class" />
	</div>

	<div class="form-group py-2">
		<label for="VoucherCount">Voucher Count:</label>
		<input type="number" id="VoucherCount" name="VoucherCount" class="form-control" required value="@Model?.VoucherCount" />
	</div>

	<div class="form-group py-2">
		<label for="RoomNum">Room:</label>
		<select id="RoomNum" name="RoomNum" asp-for="RoomNum" required>
			@{
				if (Model.RoomNum == null)
				{
					<option value="0" selected>*None*</option>
				}
				else
				{
					<option value="0">*None*</option>
					<option value="@Model?.RoomNum" selected>@Model?.RoomNum</option>
				}

				foreach (Room r in SomerenWebApp.Controllers.CommonController._room_rep.GetAllAvalibleForStudents())
				{
					if(r.RoomNumber != Model?.RoomNum)
					{
						<option value="@r.RoomNumber">@r.RoomNumber</option>
					}				
				}
			}
		</select>
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>
</form>

<a href="/Students/Index">Back to List</a>
