@model SomerenWebApp.Models.Drink

@{
    ViewData["Title"] = "Add Drink";
}

<h1>Add new Drink:</h1>
<form action="/Drinks/Add" method="POST">

    <div class="form-group py-2">
        <label for="Name">Drink Name</label>
        <input type="text" class="input_field" asp-for="Name" required />
    </div>

    <div class="form-group py-2">
        <label for="Alcoholic">Alcoholic </label>
        <input type="checkbox" asp-for="Alcoholic" />
    </div>

    <div class="form-group py-2">
        <label for="Price">Price</label>
        <input type="number" step="0.01" asp-for="Price" value="0" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Drink</button>
</form>
<br />
<a href="/Drinks/Index" class="btn btn-primary">Back to List</a>

