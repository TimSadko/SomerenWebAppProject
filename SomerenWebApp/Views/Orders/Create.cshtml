@model SomerenWebApp.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<div class="controller_body">
    <h1 class="display-4 text-center">Place a New Order</h1>

    <form asp-action="Confirm" method="post">
        <div class="form-group">
            <label>Student:</label>
            <select asp-for="StudentNumber" class="form-control">
                @foreach (var student in SomerenWebApp.Controllers.CommonController._student_rep.GetAll())
                {
                    <option value="@student.StudentNum">@student.FirstName @student.LastName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Drink:</label>
            <select asp-for="DrinkID" class="form-control">
                @foreach (var drink in SomerenWebApp.Controllers.CommonController._drink_rep.GetAllDrinks())
                {
                    <option value="@drink.Id">@drink.Name (€ @drink.Price.ToString("0.00"))</option>
                }
            </select>
        </div>
        <div class="form-group py-2">
            <label for="Price">Price</label>
            <input type="number" step="0.01" asp-for="Price" value="0" required />
        </div>

        <button type="submit" class="btn btn-success mt-3">Next</button>
        
    </form>
</div>
