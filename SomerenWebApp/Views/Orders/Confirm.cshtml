@model List<SomerenWebApp.Models.Order>


@{
    ViewData["Title"] = "Confirm Order";
    string studentName = ViewBag.StudentName;
    string drinkName = ViewBag.DrinkName;
    decimal? price = ViewBag.Price;
}

<div class="controller_body bg-dark p-4 rounded">
    <h1 class="display-4 text-center text-white">All Orders</h1>
    <a href="/Orders/Create"> Add New Order </a>
    <table class="table table-dark table-striped mt-4">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Student Number</th>
            <th>Drink ID</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.StudentNumber</td>
                <td>@order.DrinkID</td>
                <td>€@order.Price.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

</div>
