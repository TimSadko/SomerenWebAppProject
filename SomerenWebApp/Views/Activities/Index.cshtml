@model List<Activity>
@{
    ViewData["Title"] = "Activities";
}


<div class="text-center">
    <h1 class="display-4">Activity</h1>
    <a href="/Activities/Add">Add New Activity</a>
    <table>
        <thead>
            <tr>
                <th>Activity Id</th>
                <th>Activity Name</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Activity act in Model)
                {
                    <tr>
                        <td>@act.ActivityId</td>
                        <td>@act.ActivityName</td>
                        <td>@act.Date</td>
                        
                        <td>
                            <a href="/Activities/Edit/@act.ActivityId">Edit</a>
                            <a href="/Activities/Delete/@act.ActivityId">Delete</a>
                           
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

