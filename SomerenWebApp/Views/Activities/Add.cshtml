@model SomerenWebApp.Models.Activity

@{
	ViewData["Title"] = "Create Activity";
}

<h4>Add New Activity</h4>

<form action="/Activities/Add" method="post">
	<div class="form-group py-2">
		<label for="Activity Name">Activity Name:</label>
		<input type="text" id="ActivityName" name="ActivityName" class="form-control" required value="@Model?.ActivityName" />
	</div>

	<div class="form-group py-2">
		<label for="Date">Date:</label>
		<input type="text" id="date" name="Date" class="form-control" required value="@Model?.Date" />
	</div>

	<button type="submit" class="btn btn-primary">Add</button>
</form>

<a href="/Activities/Index">Back to List</a>