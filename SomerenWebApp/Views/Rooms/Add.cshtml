@{
    ViewData["Title"] = "Add Room";
}

<h1>Add New Room:</h1>
<form action="/Rooms/Add" method="POST">


    <div class="form-group py-2">
        <label for="RoomNumber">Room Number:</label>
        <input type="text" id="RoomNumber" name="RoomNumber" class="form-control" required value="@Model?.RoomNumber" />
    </div>

    <div class="form-group py-2">
        <label for="Building">Building :</label>
        <input type="text" id="Building" name="Building" class="form-control" required value="@Model?.Building" />
    </div>

    <button type="submit" class="btn btn-primary">Add Room</button>
</form>
<br />
<a href="/Rooms/Index" class="btn btn-primary">Back to List</a>

