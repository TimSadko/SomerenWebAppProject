@model SomerenWebApp.Models.Lecturer

@{
	ViewData["Title"] = "Edit Lecturer";
}

<h4>Edit Lecturer</h4>

<form action="/Lecturers/Edit" method="post">
	<input hidden type="number" name="LecturerId" value="@Model?.LecturerId" />

	<div class="form-group py-2">
		<label for="FirstName">First Name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control" required value="@Model?.FirstName" />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last Name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control" required value="@Model?.LastName" />
	</div>

	<div class="form-group py-2">
		<label for="PhoneNum">Telephone Number:</label>
		<input type="tel" id="PhoneNum" name="PhoneNum" class="form-control" required value="@Model?.PhoneNumber" />
	</div>

	<div class="form-group py-2">
		<label for="Age">Age:</label>
		<input type="number" id="Age" name="Age" class="form-control" required value="@Model?.Age" />
	</div>

	<div class="form-group py-2">
		<label for="RoomNum">Room Number:</label>
		<input type="number" id="RoomNum" name="RoomNum" class="form-control" required value="@Model?.RoomNumber" />
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>
</form>

<a href="/Lecturers/Index">Back to List</a>

