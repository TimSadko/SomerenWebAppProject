@model List<Lecturer>

@{
    ViewData["Title"] = "Lecturers";
}

<div class="text-center">
    <h1 class="display-4">Lecturers:</h1>
    <a href="/Lecturers/Create">Create New Lecturer</a>
    <table>
        <thead>
            <tr>
                <th>Lecturer Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Telephone Number</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Lecturer lecturer in Model)
                {
                    <tr>
                        <td>@lecturer.LecturerId</td>
                        <td>@lecturer.FirstName</td>
                        <td>@lecturer.LastName</td>
                        <td>@lecturer.PhoneNumber</td>
                        <td>@lecturer.Age</td>
                        <!--<td>
                            <a href="/Student/Edit/std.StudentNum">Edit</a>
                            <a class="VerticalBreak" href="/Student/Delete/std.StudentNum">Delete</a>
                        </td>-->
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
